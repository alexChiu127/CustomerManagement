@model CustomerManagement.ViewModel.CustomerListViewModel

@{
    ViewBag.Title = "客戶資料列表";
}

<h2>客戶資料列表</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<hr />
<div class="well">
    @using (Html.BeginForm("Index", "客戶資料", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "CustomerList" }))
    {
        <div class="row">
            <div class="col-md-6 form-group">
                <label class="col-lg-3 control-label">客戶名稱:</label>
                <div class="col-lg-8">
                    @Html.EditorFor(x => x.SearchParameter.客戶名稱, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="col-md-6 form-group">
                <label class="col-lg-3 control-label">客戶統一編號:</label>
                <div class="col-lg-8">
                    @Html.EditorFor(x => x.SearchParameter.客戶統一編號, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 form-group">
                <label class="col-lg-3 control-label">客戶Email:</label>
                <div class="col-lg-8">
                    @Html.EditorFor(x => x.SearchParameter.客戶Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="col-md-6 form-group">
                <label class="col-lg-3 control-label">客戶電話:</label>
                <div class="col-lg-8">
                    @Html.EditorFor(x => x.SearchParameter.客戶電話, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 form-group">
                <label class="col-lg-3 control-label">客戶分類:</label>
                <div class="col-lg-8">
                    @Html.DropDownListFor(x => x.SearchParameter.客戶分類,
                        new List<SelectListItem> () { new SelectListItem{ Text = "VIP", Value= "VIP" }, new SelectListItem { Text = "Normal", Value = "Normal" } },"",
                        htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

        </div>
        <span class="clearfix"></span>
        <div class="row">
            <div class="col-md-offset-5">
                <input type="submit" class="btn btn-primary" value="Search">
                <span></span>
                <input type="reset" class="btn btn-default" value="Cancel">
            </div>
        </div>


    }
</div>
<table class="table" id="CustomerDt">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customers.FirstOrDefault().客戶名稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers.FirstOrDefault().客戶分類)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers.FirstOrDefault().統一編號)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers.FirstOrDefault().電話)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers.FirstOrDefault().傳真)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers.FirstOrDefault().地址)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers.FirstOrDefault().Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Customers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶分類)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.統一編號)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.電話)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.傳真)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.地址)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>


</table>
@section scripts {
    <script>
        $(function () {
            $('#CustomerDt').dataTable({
                "paging": false,
                "filter": false,
                "info": false
            });
        });
    </script>
}