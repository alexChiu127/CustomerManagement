@model CustomerManagement.ViewModel.CustomerBankInfoListViewModel

@{
    ViewBag.Title = "客戶銀行資訊";
}

<h2>客戶銀行資訊</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<hr />
<div class="well">
    @using (Html.BeginForm("Index", "客戶銀行資訊", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "CustomerList" }))
    {
        <div class="row">
            <div class="col-md-6 form-group">
                <label class="col-lg-3 control-label">帳戶名稱:</label>
                <div class="col-lg-8">
                    @Html.EditorFor(x => x.SearchParameter.帳戶名稱, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="col-md-6 form-group">
                <label class="col-lg-3 control-label">帳戶號碼:</label>
                <div class="col-lg-8">
                    @Html.EditorFor(x => x.SearchParameter.帳戶號碼, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 form-group">
                <label class="col-lg-3 control-label">銀行名稱:</label>
                <div class="col-lg-8">
                    @Html.EditorFor(x => x.SearchParameter.銀行名稱, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="col-md-6 form-group">
                <label class="col-lg-3 control-label">銀行代碼:</label>
                <div class="col-lg-8">
                    @Html.EditorFor(x => x.SearchParameter.銀行代碼, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
        <span class="clearfix"></span>
        <div class="row">
            <div class="col-md-offset-5">
                <input type="submit" class="btn btn-primary" value="Search">
                <span></span>
                <input type="reset" class="btn btn-default" value="Cancel">
            </div>
        </div>
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerBankInfo.FirstOrDefault().銀行名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerBankInfo.FirstOrDefault().銀行代碼)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerBankInfo.FirstOrDefault().分行代碼)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerBankInfo.FirstOrDefault().帳戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerBankInfo.FirstOrDefault().帳戶號碼)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerBankInfo.FirstOrDefault().客戶資料.客戶名稱)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.CustomerBankInfo)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.銀行名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.銀行代碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.分行代碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.帳戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.帳戶號碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
